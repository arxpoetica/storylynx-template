html {
	height: 100%;
	background-color: $white;
	font: 1px/1.2 $font; // 1rem === 1px in this scenario
	box-sizing: border-box;
	text-size-adjust: 100%;
	opacity: 1;
	transition: opacity 0.1s ease-in-out;
	&.preloaded {
		opacity: 0;
	}
}
body {
	display: flex;
	min-height: 100%;
	margin: 0;
	background-color: $white;
	color: $black;
	font: 15rem/1.15 $font;
	letter-spacing: 0.02em;
}
.layout-outer {
	padding: 0 30rem;
	@media (--small-down) { padding: 0 20rem; }
}
.layout-inner {
	width: 100%;
	max-width: $layout-width;
	margin: 0 auto;
}
