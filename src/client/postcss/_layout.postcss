.layout-main {
	padding: 100rem 0;
	@media (--small-down) { padding: 40rem 0; }
}
.chapters {
	margin: 0 -30rem;
	@media (--small-down) { margin: 0 -20rem; }
}
.chapter {
	position: relative;
	z-index: 1;
}
.chapter-content {
	position: relative;
	margin: 0 auto;
	// padding: 0 40rem;
	width: 100%;
	max-width: $layout-width;
	z-index: 2;
	// @media (--small-down) { padding: 0 20rem; }
}
// https://css-tricks.com/full-width-containers-limited-width-parents/
// https://codepen.io/tigt/post/bust-elements-out-of-containers-with-one-line-of-css
.full-width {
	margin: 0 calc(50% - 50vw);
}
.yavascript {
	overflow: hidden;
	position: absolute;
	width: 0;
	height: 0;
	top: -1px;
	left: -1px;
	pointer-events: none;
}
